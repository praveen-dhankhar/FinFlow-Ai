# Production Environment Variables Template
# Copy this file to .env.production and update with your production values

# Database Configuration
DB_NAME=finance_forecast
DB_USER=postgres
DB_PASSWORD=your-secure-database-password

# Redis Configuration
REDIS_PASSWORD=your-secure-redis-password

# JWT Configuration
JWT_SECRET=your-super-secure-jwt-secret-key-here
JWT_EXPIRATION=15m
JWT_REFRESH_EXPIRATION=7d

# Email Configuration
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=noreply@finance-forecast.app
SMTP_PASS=your-app-specific-password

# AWS Configuration
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_S3_BUCKET=finance-forecast-storage-prod
AWS_REGION=us-east-1

# External API Keys
OPENAI_API_KEY=your-openai-api-key
PLAID_CLIENT_ID=your-plaid-client-id
PLAID_SECRET=your-plaid-secret
PLAID_ENVIRONMENT=production

# Monitoring
SENTRY_DSN=your-sentry-dsn
LOG_LEVEL=info

# Vercel Configuration
VERCEL_TOKEN=your-vercel-token
VERCEL_ORG_ID=your-vercel-org-id
VERCEL_PROJECT_ID=your-vercel-project-id

# GitHub Configuration
GITHUB_TOKEN=your-github-token
LHCI_GITHUB_APP_TOKEN=your-lighthouse-ci-token

# Slack Configuration
SLACK_WEBHOOK=your-slack-webhook-url

# Grafana Configuration
GRAFANA_PASSWORD=your-grafana-admin-password
